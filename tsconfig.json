{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": false,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ES2020"
  },

  "include": ["src", "types"],
  "ts-node": {
    "logError": true,
    "files": true
  }
}
